# syntax-check
ansible-playbook -i hosts git.yml --syntax-check

# task list
ansible-playbook -i hosts git.yml --list-tasks

# dry-run
ansible-playbook -i hosts git.yml --check

# execute
ansible-playbook -i hosts git.yml
## step-by-step 
#ansible-playbook -i hosts git.yml --step
## verbose mode (you can see output)
#ansible-playbook -i hosts git.yml -v
